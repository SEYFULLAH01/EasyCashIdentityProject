@model List<EasyCashIdentityProject.EntityLayer.Concrete.CustomerAccount>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Iban ve Hesap Bilgileri</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="">
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="x_panel" style="background-color: #f9f9f9; border-radius: 10px; padding: 20px;">
                                    <div class="x_title">
                                        <h2 style="font-weight: 600; color: #34495e;">Hesap Numaraları</h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li>
                                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                            <li>
                                                <a class="close-link"><i class="fa fa-close"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content bs-example-popovers">
                                        @foreach (var item in Model)
                                        {
                                            <div class="alert alert-warning alert-dismissible fade in" role="alert" style="border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 20px; background-color: #fff3cd; border: 1px solid #000000;">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="position: absolute; top: 12px; right: 15px;">
                                                    <span aria-hidden="true" style="font-size: 14px; font-weight: 500; color: #856404; cursor: pointer;">IBAN Kopyala</span>
                                                </button>
                                                <strong style="color: #856404;">Hesap Döviz Türü:</strong>
                                                <span style="color: #28a745; font-weight: 600;">@item.CustomerAccountCurrency</span><br />

                                                <strong style="color: #856404;">Banka:</strong>
                                                <span style="color: #28a745; font-weight: 600;">@item.BankBranch</span><br />

                                                <strong style="color: #856404;">Hesap No:</strong>
                                                <span style="color: #28a745; font-weight: 600;">@item.CustomerAccountNumber</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
